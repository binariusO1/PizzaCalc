<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.binario.pizzacomparator">

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4489491955068803~2973878700"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FragmentSettings"
            android:parentActivityName=".FragmentCompare" />
        <activity
            android:name=".FragmentHelp"
            android:parentActivityName=".FragmentCompare" />
        <activity
            android:name=".FragmentAbout"
            android:parentActivityName=".FragmentCompare" />
        <activity
            android:name=".FragmentRefresh"
            android:parentActivityName=".FragmentRefresh" />
    </application>

</manifest>