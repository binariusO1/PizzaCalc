<?xml version="1.0" encoding="utf-8"?>
<!--important! if you want to increase height, than you must increase height in pizzaGroup class -->
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/ig_layout_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/item_group_background"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/ig_text_about"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="some text"
    android:layout_marginStart="20dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="0dp"
    />
    <!--bar-->
    <RelativeLayout
        android:id="@+id/ig_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:background="#00E86F74"
        android:layout_marginBottom="0dp">
        <LinearLayout
            android:id="@+id/ig_top_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ig_top_bar_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="3dp"
                    android:text="@string/item_group_total_area"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ig_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="11"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/ig_measure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="cm"
                    android:textAlignment="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="²"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:id="@+id/ig_top_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ig_top_bar_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="3dp"
                    android:text="@string/item_group_can_buy1"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/ig_currency_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="3dp"
                    android:text="*"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/ig_top_bar_text_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="3dp"
                    android:text="@string/item_group_can_buy2"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="140dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ig_score_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="11"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/ig_measure2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="cm"
                    android:textAlignment="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="²"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ig_top_bar_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/ig_top_bar_right"
            android:layout_toEndOf="@+id/ig_top_bar_left"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/ig_top_bar_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="3dp"
                    android:text="@string/item_group_total_cost"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/ig_score_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="11"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/ig_currency_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text=" $"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        </RelativeLayout>
    <LinearLayout
        android:id="@+id/ig_divider_bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/ig_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="#26B23F49"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        />
    <LinearLayout
        android:id="@+id/ig_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/ig_top_bar">

        <LinearLayout
            android:layout_width="@dimen/adapter_text_bar"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/adapter_first_item"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ig_text_diameter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/item_group_diameter"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/adapter_second_item"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ig_text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/item_group_price"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/adapter_third_item"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ig_text_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/item_group_amount"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ig_rl_pizza_list"
        app:layout_constraintTop_toBottomOf="@+id/ig_bar"
        app:layout_constraintStart_toStartOf="@+id/ig_bar"
        android:layout_width="@dimen/adapter_text_bar"
        android:layout_height="40dp"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ig_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0004ED00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <!--<LinearLayout
        android:id="@+id/ig_layout_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/ig_button_delete"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_delete_arrow" />
    </LinearLayout>-->

    <LinearLayout
        android:id="@+id/ig_layout_add_pizza"
        android:layout_width="@dimen/adapter_text_bar"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="0dp"
        android:paddingBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/ig_bottom_bar"
        app:layout_constraintStart_toStartOf="@id/ig_bar"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/ig_expand_button_pizza"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/button_add"
                style="?android:attr/borderlessButtonStyle"/>
            <TextView
                android:id="@+id/ig_text_pizza"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="@string/ig_text_pizza_add_another"
                android:textColor="#40000000"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ig_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="#00FFFFFF"
        android:layout_marginBottom="0dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>