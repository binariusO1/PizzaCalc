<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:id="@+id/pop_add_text_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/pop_add_title_add"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/pop_add_enter_diameter"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/pop_add_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="[UNITS]"
                android:gravity="center_horizontal"/>
        </LinearLayout>


        <EditText
            android:id="@+id/av_editText_diameter"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/field_background"
            android:inputType="numberDecimal"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Ã˜"
            android:textColorHint="#C3C3C3"
            android:maxLength="3" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/pop_add_enter_price"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/pop_add_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="[UNITS]"
            android:gravity="center_horizontal"/>
    </LinearLayout>

        <EditText
            android:id="@+id/av_editText_price"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/field_background"
            android:inputType="numberDecimal"
            android:gravity="center_vertical|center_horizontal"
            android:hint="$"
            android:textColorHint="#C3C3C3"
            android:maxLength="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/pop_add_enter_amount"
            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/av_editText_amount"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/field_background"
            android:inputType="numberDecimal"
            android:gravity="center_vertical|center_horizontal"
            android:hint="1"
            android:textColorHint="#C3C3C3"
            android:maxLength="2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <Button
            android:id="@+id/av_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="add"
            android:textColor="@color/colorWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>